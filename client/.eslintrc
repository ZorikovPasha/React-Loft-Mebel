{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"rules": {
		"prettier/prettier": [
			"error",
			{
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "tabWidth": 2,
        "semi": false,
        "arrowParens": "always",
        "singleAttributePerLine": true,
        "jsxSingleQuote": true,
        "endOfLine": "lf"
      }
		]
	}
}